{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ES2020",
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "**/tests/**",
    "vite.config.ts"
  ]
}